---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout
    title={frontmatter.title}
    description={frontmatter.description}
    ogImage={frontmatter.ogImage}
>
    <div
        style="background-color: #b4b644; color: #f1f0ef; padding: 1.5rem; border-radius: 12px; margin-bottom: 3rem;"
    >
        <a
            href="/blog"
            style="text-decoration: none; color: inherit; display: block;"
        >
            <div
                style="font-size: 1.8rem; font-weight: bold; margin-bottom: 0.5rem; line-height: 1.3;"
            >
                5hon.com NEWS
            </div>
            <p style="margin: 0; font-weight: normal;">
                5hon.comのアップデート情報や、便利な使い方を紹介します。
            </p>
        </a>
    </div>

    <article class="blog-post">
        <h1>{frontmatter.title}</h1>
        <div class="post-meta">
            <span class="post-date"
                >{new Date(frontmatter.date).toISOString().split("T")[0]}</span
            >
        </div>
        <slot />
    </article>
</Layout>

<style>
    .blog-post {
        line-height: 1.8;
    }
    .post-meta {
        color: var(--muted);
        margin-bottom: 2rem;
        font-size: 0.9rem;
    }
    /* Simple markdown styling */
    .blog-post :global(h2) {
        font-size: 1.5rem;
        margin-top: 3rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.5rem;
    }
    .blog-post :global(h3) {
        font-size: 1.25rem;
        margin-top: 2rem;
        margin-bottom: 0.8rem;
    }
    .blog-post :global(p) {
        margin-bottom: 1.5rem;
    }
    .blog-post :global(ul),
    .blog-post :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }
    .blog-post :global(blockquote) {
        border-left: 4px solid var(--color-border);
        padding-left: 1rem;
        margin-left: 0;
        color: var(--muted);
    }
    .blog-post :global(img) {
        max-width: 100%;
        border-radius: 8px;
        margin: 1.5rem 0;
    }
</style>
